<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Visualizar Status de Chamados</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/admin/status" class="btn btn-outline-info btn-sm">Listar</a>
                    <a href="/admin/edit-status-chamado/{{catchamados._id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a href="/admin/del-status-chamado/{{status._id}}" class="btn btn-outline-danger">Apagar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/admin/cat-chamados">Listar</a>
                        <a class="dropdown-item" href="/admin/edit-chamados/{{catchamados._id}}">Editar</a>
                        <a href="/admin/del-status-chamado/{{status._id}}" data-toggle="modal"
                            data-target="#apagarRegistro">Apagar</a>
                    </div>
                </div>
            </div>
         </div>
        {{>_msg}}
             
        <hr>

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{status._id}}</dd>

             <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-9">{{status.codigo}}</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">{{status.descricao}}</dd>
        </dl>
    </div>

</div>